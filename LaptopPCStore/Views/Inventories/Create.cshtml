@model LaptopPCStore.Models.Inventory

@{
    ViewData["Title"] = "Create Inventory";
}



<section class="">
    <div class="container ">
        <div class="row mb-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <p class="fw-bold text-success mb-2">Add</p>
                <h2 class="fw-bold">New Inventory </h2>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-8 col-xl-8">
                <div>
                    <form asp-action="Create" class="p-3 p-xl-4" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <label asp-for="lap_id" class="control-label"></label>
                                    <select required asp-for="lap_id" class="form-control" asp-items="ViewBag.lap_id"></select>
                                </div>

                            </div>
                        </div>
                        <div class="row">

                            <div class="col-lg-6 mb-3"><input required min="1" class="form-control" asp-for="quantity" type="number" id="quantity" name="quantity" placeholder="Inventory Quantity" step="1" oninput="this.form.pur_quantity_range.value=this.value"></div>
                            <div class="col-lg-6 mb-3 d-xl-flex align-items-xl-center"><input class="form-range form-control" type="range" id="pur_quantity_range" name="pur_quantity_range" placeholder="Quantity" min="1" max="20" step="1" oninput="this.form.quantity.value=this.value" value="1"></div>

                        </div>


                        <div><button class="btn btn-primary shadow d-block w-100" type="submit">Create Invoice</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

