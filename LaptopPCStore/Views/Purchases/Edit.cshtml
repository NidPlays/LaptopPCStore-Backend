            <div class="form-group">
                <label asp-for="purchase_quantity" class="control-label"></label>
                <input asp-for="purchase_quantity" required class="form-control" />
                <span asp-validation-for="purchase_quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="purchase_date" class="control-label"></label>
                <input asp-for="purchase_date" required class="form-control" />
                <span asp-validation-for="purchase_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="purchase_cost" class="control-label"></label>
                <input asp-for="purchase_cost" required class="form-control" />
                <span asp-validation-for="purchase_cost" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
