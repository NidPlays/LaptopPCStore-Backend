@model LaptopPCStore.Models.Vendor

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Vendor</h4>
<hr />
<section class="py-5">
    <div class="container py-5">
        <div class="row mb-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <p class="fw-bold text-success mb-2">Add</p>
                <h2 class="fw-bold">New Vendor</h2>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-8 col-xl-8">
                <div>
                    <form asp-action="Create" class="p-3 p-xl-4">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="mb-3"><input asp-for="ven_name" class="form-control" type="text" id="ven_name" name="ven_name" placeholder="Vendor Name" required><span asp-validation-for="ven_name" class="text-danger"></span></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-3"><input asp-for="ven_number" class="form-control" type="text" id="ven_number" name="ven_number" placeholder="Vendor Phone Number" required><span asp-validation-for="ven_number" class="text-danger"></span></div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3"><input asp-for="ven_mail" class="form-control" type="email" id="ven_mail" name="ven_mail" placeholder="Vendor Email" required><span asp-validation-for="ven_mail" class="text-danger"></span></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="mb-3"><textarea asp-for="ven_address" class="form-control" id="ven_address" name="ven_address" placeholder="Vendor Address" required></textarea><span asp-validation-for="ven_address" class="text-danger"></span></div>
                            </div>
                        </div>
                        <div><button value="Create" class="btn btn-primary shadow d-block w-100" type="submit">Add vendor</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>










